@model Przychodnia.Models.Przychodnie.ListPrzychodnieViewModel

@{
    ViewBag.Title = "Przychodnie";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Lista przychodni</h3>

    </div>

    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover" data-tables>
            <thead>
                <tr>
                    <td></td>
                    <td>ID</td>
                    <td>Nazwa przychodni</td>
                    <td>Kierownik</td>
                    <td>Ilość lekarzy</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var przychodnia in Model.Przychodnie)
                {
                    <tr>
                        <td><a title="Zmień ustawienia przychodni" href="@Url.Action("Manage", new { przychodniaID = przychodnia.ID })"><i class="fa fa-wrench"></i></a></td>
                        <td>@przychodnia.ID</td>
                        <td>@przychodnia.Nazwa</td>
                        <td>@przychodnia.KierownikNazwisko @przychodnia.KierownikImie</td>
                        <td>@przychodnia.IloscLekarzy</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

@section scripts {
    <script type="text/javascript">

        $('[data-tables]').DataTable({
            responsive: true
        });
    </script>

}
