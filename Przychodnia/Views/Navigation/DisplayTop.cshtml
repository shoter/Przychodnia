@model Przychodnia.Models.Navigation.TopViewModel

@{
    ViewBag.Title = "DisplayTop";
}

<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand">Przychodnia</a>
    </div>
    <!-- /.navbar-header -->

    <ul class="nav navbar-top-links navbar-right">


        <!-- /.dropdown -->
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-bell fa-fw"></i> <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-alerts">
                @foreach (var alert in Model.Alerty)
                {
                    <li>
                        <a>
                            <div>
                                <i class="fa fa-user"> @alert.Nazwisko @alert.Imie</i><br/>
                                <i class="fa fa-warning fa-fw"></i> @alert.Message
                                <span class="pull-right text-muted small">@alert.Date.ToShortDateString() @alert.Date.ToShortTimeString()</span>
                            </div>
                        </a>
                    </li>
                    <li class="divider"></li>
                }
               
                <li>
                    <a class="text-center" href="@Url.Action("Index", "Alert")">
                        <div>
                            <strong>Zobacz wszystkie alerty (tylko lekarz)</strong>
                            <i class="fa fa-angle-right"></i>
                        </div>
                    </a>
                </li>
            </ul>
            <!-- /.dropdown-alerts -->
        </li>
        <!-- /.dropdown -->
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
                <li>
                    <a><i class="fa fa-user fa-fw"></i>@Model.Username</a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="@Url.Action("Logout", "Account")"><i class="fa fa-sign-out fa-fw"></i> Wyloguj</a>
                </li>
            </ul>
            <!-- /.dropdown-user -->
        </li>
        <!-- /.dropdown -->
    </ul>
    <!-- /.navbar-top-links -->

    @Html.Action("RenderNavigation", "Navigation")
    <!-- /.navbar-static-side -->
</nav>

