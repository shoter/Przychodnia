@model Przychodnia.Models.alerty.AlertListViewModel
@{
    ViewBag.Title = "Alerty";
}


        <div class="panel panel-default">
    <div class="panel-heading">
        <h3>Lista alertów twoich pacjentów</h3>

    </div>

    <div class="panel-body">
        <div>
            <table class="table table-striped table-bordered table-hover" data-tables>
                <thead>
                    <tr>
                        <td>Data</td>
                        <td>Pacjent</td>
                        <td>Alert</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var alert in Model.Alerty)
                    {
                        <tr>
                            <td>@alert.Date.ToShortDateString() @alert.Date.ToShortTimeString()</td>
                            <td>@alert.Nazwisko @alert.Imie</td>
                            <td>@alert.Message</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>





@section scripts {
    <script type="text/javascript">

        $('[data-tables]').DataTable({
            responsive: true
        });
    </script>
    }
