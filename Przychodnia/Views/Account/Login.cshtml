@model Przychodnia.Models.Account.LoginViewModel

@{ 
    Layout = null;
    ViewBag.Title = "Przychodnia - logowanie";
}

@using Przychodnia.Models

@{
    var messages = TempData["Messages"];
    List<PopupMessageViewModel> messageList = null;
    if (messages != null)
    {
        messageList = messages as List<PopupMessageViewModel>;
    }
    else
    {
        messageList = new List<PopupMessageViewModel>();
    }
}




<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page - My ASP.NET Application</title>
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/site.css" rel="stylesheet" />
    <link href="/Content/sb-admin-2.css" rel="stylesheet" />
    <link href="/vendor/metisMenu/metisMenu.min.css" rel="stylesheet" />
    <link href="/vendor/morrisjs/morris.css" rel="stylesheet" />
    <link href="/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <script src="/Scripts/modernizr-2.6.2.js"></script>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                @if (messageList.Count > 0)
                {
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @Html.DisplayFor(m => messageList)
                        </div>

                    </div>
                }

                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Przychodnia - logowanie</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm(RouteDataHelper.ActionName, RouteDataHelper.ControllerName, FormMethod.Post))
                        {
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Nazwa użytkownika" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Hasło" })
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button class="btn btn-lg btn-success btn-block">Login</button>
                            </fieldset>
                        }
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Zdefiniowani użytkownicy</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-hover" data-tables>
                            <thead>
                                <tr>
                                    <th>Login</th>
                                    <th>Hasło</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var li in Model.Loginy)
                                {
                                    <tr>
                                        <td>@li.Login</td>
                                        <td>@li.Password</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/Scripts/jquery-1.10.2.js"></script>

    <script src="/Scripts/bootstrap.js"></script>
    <script src="/Scripts/respond.js"></script>
    <script src="/Scripts/sb-admin-2.js"></script>
    <script src="/vendor/metisMenu/metisMenu.min.js"></script>
    <script src="/vendor/raphael/raphael.min.js"></script>
    <script src="/vendor/morrisjs/morris.min.js"></script>



