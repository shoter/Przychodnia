@model Przychodnia.Models.Osoby.OsobyListViewModel
@{
    ViewBag.Title = "Lista osób";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewBag.Title</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover" data-tables>
            <thead>
                <tr>
                    <th></th>
                    <th>Płeć</th>
                    <th>Osoba ID</th>
                    <th>Osoba</th>
                    <th>Data urodzenia</th>
                    <th>Data zgonu</th>
                    <th>Pesel</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var osoba in Model.Osoby)
                {
                    <tr>
                        <td title="Wpisz date zgonu"><a href="@Url.Action("Zabij", new { KtoZawinilID = osoba.ID })"><i class="fa fa-user-times"></i></a></td>
                        <td><i class="fa fa-@(osoba.CzyMezczyzna ?"mars" : "venus")"></i></td>
                        <td>@osoba.ID</td>
                        <td>@osoba.Nazwisko @osoba.Imie</td>
                        <td>@osoba.DataUrodzenia.ToShortDateString()</td>
                        <td>@(osoba.DataZgonu == null ? "" : osoba.DataZgonu.Value.ToShortDateString())</td>
                        <td>@osoba.Pesel</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

